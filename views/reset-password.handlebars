<div class="row">
    <div class="col-12">
        <h1 class="centered-title"><a href="/">sweet <img class="bee-logo" src="/icons/bee-color.svg" /></a></h1>

        {{> message }}

        <form class="logged-out-form" action="/reset-password/{{resetToken}}" method="post">
            <div class="form-group">
                <input type="password" class="form-control" name="password" placeholder="New password">
                <label for="password">New password</label>
            </div>
            <div class="form-group">
                <input type="password" class="form-control" name="passwordrepeat" placeholder="Repeat new password">
                <label for="passwordrepeat">Repeat new password</label>
            </div>

            <button class="button button-large button-full-width" type="submit">Reset password</button>
        </form>

    </div>

</div>
