<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=0, shrink-to-fit=no">
  <title>{{#unless metadata.title}}sweet{{else}}{{metadata.title}}{{/unless}}</title>

  <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png?v=22062019">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png?v=22062019">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png?v=22062019">
    <link rel="manifest" href="/site.webmanifest?v=22062019">
    <link rel="mask-icon" href="/safari-pinned-tab.svg?v=22062019" color="#ce1717">
    <link rel="shortcut icon" href="/favicon.ico?v=22062019">
    <meta name="msapplication-TileColor" content="#b91d47">
    <meta name="theme-color" content="#ffffff">

  <meta property="og:title" content="{{#unless metadata.title}}sweet{{else}}{{metadata.title}}{{/unless}}">
  <meta property="og:description" content="{{#unless metadata.description}}A trust and community-based lightweight social network.{{else}}{{metadata.description}}{{/unless}}">
  <meta property="og:image" content="{{#unless metadata.image}}https://sweet.sh/android-chrome-512x512.png{{else}}{{metadata.image}}{{/unless}}">
  <meta property="og:url" content="{{#unless metadata.url}}https://sweet.sh/{{else}}{{metadata.url}}{{/unless}}">
  <meta name="twitter:card" content="summary">
  <meta name="twitter:title" content="{{#unless metadata.title}}sweet{{else}}{{metadata.title}}{{/unless}}">
  <meta name="twitter:description" content="{{#unless metadata.description}}A trust and community-based lightweight social network.{{else}}{{metadata.description}}{{/unless}}">
  <meta name="twitter:image" content="{{#unless metadata.image}}https://sweet.sh/android-chrome-512x512.png{{else}}{{metadata.image}}{{/unless}}">

  <link href="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.bubble.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/quill/1.3.6/quill.min.js"></script>

  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/navbar-icons.css">
  <link id="darkModeStylesheet" rel="stylesheet" href="">

  <script defer src="/fonts/fontawesome/js/all.min.js"></script>

  <script src="/js/jquery-3.4.1.min.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
  <script src="/js/infinite-scroll.pkgd.min.js" crossorigin="anonymous"></script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/simplelightbox/1.17.1/simplelightbox.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/simplelightbox/1.17.1/simple-lightbox.min.js" crossorigin="anonymous"></script>

  <script src="/js/bootbox.min.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/tribute.css" />
  <script src="/js/tribute.min.js" crossorigin="anonymous"></script>

  {{> clientSideCodeErrorReporter }}

  <script src="/socket.io/socket.io.js"></script>

</head>

<body>

  {{> navbar }}

  <main id="bodyContainer" class="container">

    <div class="new-feed-container-load-status" style="display:none;">
      <div class="loader-ellips infinite-scroll-request">
        <span class="loader-ellips__dot"></span>
        <span class="loader-ellips__dot"></span>
        <span class="loader-ellips__dot"></span>
        <span class="loader-ellips__dot"></span>
      </div>
    </div>

    <script>
      //this small fun convenience function will find elements using the selector argument within the active feed container, which will be within this bodyContainer class
      function $active(selector){
        return selector===undefined ? $('.active-feed-container') : $('.active-feed-container').find(selector);
      }
    </script>

    {{{body}}}

  </main>

  <div class="modal fade" id="boostersModal" tabindex="-1" role="dialog" aria-labelledby="boostersModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="boostersModalLabel">Boosted by</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <ul class="list-group list-group-flush" id="boosters-list"></ul>
      </div>
    </div>
  </div>

  <div class="modal fade" id="boostPostLocationModal" tabindex="-1" role="dialog" aria-labelledby="boostPostLocationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="boostPostLocationModalLabel">Boost post in a community</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <select id="communities-dropdown"></select>
            <input type="hidden" id="original-post-id"></input>
        </div>
        <div class="modal-footer">
            <button type="button" class="button grey-button" data-dismiss="modal">Close</button>
            <button type="button" class="button boost-post-into-community">Boost <i class="fas fa-angle-right"></i></button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="boostManagerModal" tabindex="-1" role="dialog" aria-labelledby="boostManagerModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="boostManagerModalLabel">Manage boosts</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
            <p>
                You have boosted this post in the following places:
            </p>
            <div class="compact-container">
                <div id="boosts-list"></div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="button grey-button" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

</body>

