            var imgs = e.children('.content').find('img');
            if(imgs.length){
                var loaded = 0;
                imgs.on('load', function(){
                    loaded++;
                    if(loaded == imgs.length){
                        showMoreAndImageLightboxing(e);
                    }
                })
                imgs.on('error', function(){
