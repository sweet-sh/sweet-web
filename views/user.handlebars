            <img class="postAuthorImage mr-2" src="{{#if this.imageEnabled}}https://sweet-images.s3.amazonaws.com/{{this.image}}{{else}}/images/communities/cake.svg{{/if}}" />
            <strong><a class="authorLink" href="/{{this.slug}}">{{this.name}}</a></strong>
