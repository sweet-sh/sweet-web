                {{/if}} {{#contains ../flaggedUsers this.email}}<i class="fas fa-exclamation-triangle text-danger"></i>{{/contains}}
            </div>
          </div>
        {{/each}}
      </div>
      {{/or}}
      {{/and}}
      {{#and loggedIn usersWhoTrustThemData.length }}
