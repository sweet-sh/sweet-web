      <div class="compact-container">
      {{#each followedUserData}}
        <div class="content-box">
            <div class="content-box-header">
                <img class="postAuthorImage mr-2" src="{{#if this.imageEnabled}}https://sweet-images.s3.amazonaws.com/{{this.image}}{{else}}/images/cake.svg{{/if}}" />
                {{#if this.displayName}}
