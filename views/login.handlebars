<div class="row">
    <div class="col-12">
        <h1 class="centered-title"><a href="/">sweet <img class="bee-logo" src="/icons/bee-color.svg" /></a></h1>

        {{> message }}

        <form  class="logged-out-form" action="/login" method="post">

            <div class="form-group">
                <input type="text" name="email" placeholder="Email" {{#if sessionFlash.email}}value="{{ sessionFlash.email }}"{{/if}}>
                <label for="email">Email</label>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Password">
                <label for="password">Password</label>
            </div>

            <button class="button full-width-button" type="submit">Log in</button>
            <a class="help-link" href="/forgot-password">Forgot password?</a>

        </form>
    </div>
</div>
