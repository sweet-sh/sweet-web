{
  "name": "sweet",
  "version": "0.1.0",
  "description": "A lightweight, trust- and community-based social network",
  "main": "server.js",
  "scripts": {
    "watch-sass": "node-sass --source-map true --output-style compressed scss/index.scss public/css/style.css --watch",
    "generate-dark-mode": "node-sass --source-map true --output-style compressed scss/dark-mode.scss public/css/dark-mode.css --watch",
    "start": "nodemon server.js & npm run watch-sass",
    "debug": "nodemon --inspect --inspect-brk=5757 server.js & node-sass --source-comments --output-style compressed scss/index.scss public/css/style.css --watch",
    "lint": "eslint --fix",
    "test": "vue-cli-service test:unit"
  },
  "author": "Raphael Kabo",
  "license": "GPL-3.0-only",
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "vue/**/*.{js,vue}",
      "!**/node_modules/**",
      "!**/public/**"
    ],
    "moduleFileExtensions": [
      "js",
      "vue"
    ],
    "transform": {
      "^.+\\.(js|jsx)?$": "<rootDir>/node_modules/babel-jest",
      ".*\\.(vue)$": "<rootDir>/node_modules/vue-jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "dependencies": {
    "@handlebars/allow-prototype-access": "^1.0.1",
    "@sendgrid/mail": "^6.3.1",
    "autolinker": "^3.0.5",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.3-alpha.1",
    "express-handlebars": "^3.0.2",
    "express-messages": "^1.0.1",
    "express-mongo-sanitize": "^1.3.2",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "got": "^9.6.0",
    "handlebars-helpers": "^0.10.0",
    "metascraper": "^5.4.0",
    "metascraper-description": "^5.4.0",
    "metascraper-image": "^5.4.0",
    "metascraper-title": "^5.4.0",
    "metascraper-url": "^5.4.0",
    "method-override": "^3.0.0",
    "moment": "^2.24.0",
    "moment-timezone": "^0.5.25",
    "mongoose": "^5.4.19",
    "morgan": "^1.9.1",
    "node-schedule": "^1.3.2",
    "nodemailer": "^6.2.1",
    "nodemailer-express-handlebars": "^3.0.0",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "request": "^2.88.0",
    "sanitize-html": "^1.20.0",
    "sharp": "^0.23.0",
    "shortid": "^2.2.14",
    "vue": "^2.6.11",
    "vue-template-compiler": "^2.6.11",
    "web-push": "^3.3.5",
    "webpack": "^4.41.5"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4",
    "@vue/cli-plugin-unit-jest": "^4.2.2",
    "@vue/cli-service": "^4.2.2",
    "@vue/test-utils": "^1.0.0-beta.31",
    "babel-core": "7.0.0-bridge.0",
    "babel-jest": "^25.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^6.8.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "jest": "^25.1.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "vue-jest": "4.0.0-beta.2",
    "vue-loader": "^15.9.0"
  }
}
