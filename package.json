    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "connect-flash": "^0.1.1",
    "connect-mongo": "^2.0.3",
    "cookie-parser": "^1.4.4",
    "express": "^4.16.4",
    "express-fileupload": "^1.1.3-alpha.1",
    "express-handlebars": "^3.0.2",
    "express-messages": "^1.0.1",
    "express-session": "^1.15.6",
    "express-validator": "^5.3.1",
    "got": "^9.6.0",
    "handlebars-helpers": "^0.10.0",
    "http-server": "^0.11.1",
    "metascraper": "^5.4.0",
    "metascraper-description": "^5.4.0",
